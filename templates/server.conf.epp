<%- | Hash $options |
# server
-%>
# File managed by Puppet
server:
<%
$options.keys.each |$key| {
   if $options[$key] =~ Integer or $options[$key] =~ Enum['yes','no'] { -%>
  <%= $key %>: <%= $options[$key] %>
<% } elsif $options[$key] =~ Array {
     [$options[$key]].flatten.each |$value| { -%>
  <%= $key %>: "<%= $value %>"
<%   }
   } else { -%>
  <%= $key %>: "<%= $options[$key] %>"
<% }
} -%>
