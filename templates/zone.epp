<%- | String $name, Hash $options |
# zone
-%>
# File managed by Puppet
zone:
  name: "<%= $name %>"
<%
$options.keys.each |$key| {
   $v = $options[$key]
   if $key == 'name' {
     next()
   } elsif $v =~ Array {
     $v.flatten.each |$value| { -%>
  <%= $key %>: <%= $value %>
<%   }
   } else { -%>
  <%= $key %>: <%= $v %>
<% }
} -%>
